{
    "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "jsx": "react",
      "lib": ["es6"],
      "moduleResolution": "node",
      "noEmit": true,
      "strict": true,
      "target": "esnext"
    },
    "exclude": [
      "node_modules",
      ".babel.config.js",
      "metro.config.js",
      "jest.config.js"
    ],
    "include": [
      "src/**/**/*.tsx",
      "src/**/**/**/*.tsx",
      "__tests__/**/**/*.tsx",
      "**.js",
      // etc
  
      // if you have a mixed JS/TS codebase, don't forget to include your JS files
      "src/**/**/*.js"
    ]
  }